<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="@dimen/content_horizontal_margin"
                android:paddingEnd="@dimen/content_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView android:id="@+id/text_view_name"
              android:textAppearance="?android:textAppearanceMedium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/text_view_id"
              android:layout_below="@id/text_view_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/text_view_place_name"
              android:layout_below="@id/text_view_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/text_view_place_address"
              android:layout_below="@id/text_view_place_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/text_view_level"
              android:layout_below="@id/text_view_place_address"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

</RelativeLayout>
