<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/view_top"
              android:background="@color/background_overlay"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageButton android:id="@+id/image_button_close"
                 android:src="@drawable/ic_close_black_24dp"
                 android:tint="@color/foreground_overlay"
                 android:background="@drawable/button_background_overlay"
                 android:layout_gravity="start"
                 android:layout_width="@dimen/touch_target_width"
                 android:layout_height="@dimen/touch_target_height"/>

    <FrameLayout android:id="@+id/view_group_content"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>

